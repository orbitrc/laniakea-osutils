#!/usr/bin/env python3

import sys, os

HELP = '''Usage: laniakea-mirrorlist <command>
    init        Initialize laniakea pacman mirrorlist

    --help      Show this help
    --version   Show version
'''

MIRRORLIST_TEMPLATE = '''
# Laniakea mirrorlist generated by laniakea-mirrorlist

Server = https://archive.orbitrc.io/laniakea/{}/$repo/$arch
'''

def show_help():
    print(HELP)

def do_init():
    f = open('/usr/lib/os-release', 'r')
    os_release = f.read()
    f.close()

    filt = filter(lambda x: x.startswith('VERSION_ID'), os_release.splitlines())
    version_id = next(filt).replace('VERSION_ID=', '').replace('"', '')

    mirrorlist = MIRRORLIST_TEMPLATE.format(version_id).lstrip()

    os.system('mkdir -p /etc/pacman.d')
    if os.path.isfile('/etc/pacman.d/mirrorlist'):
        os.system('cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.old')

    f = open('/etc/pacman.d/mirrorlist', 'w')
    f.write(mirrorlist)
    f.close()

if __name__ == '__main__':
    if len(sys.argv) < 2:
        show_help()
        exit(1)

    subcommand = sys.argv[1]

    if subcommand == '':
        pass
    elif subcommand == 'init':
        do_init()
        exit(0)
    elif subcommand == '--help':
        show_help()
        exit(0)
    elif subcommand == '--version':
        print('laniakea-osutils 0.1.1')
        exit(0)
